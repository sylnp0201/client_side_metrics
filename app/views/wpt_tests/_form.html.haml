= form_for @wpt_test do |f|
  - if @wpt_test.errors.any?
    #error_explanation
      %h2= "#{pluralize(@wpt_test.errors.count, "error")} prohibited this wpt_test from being saved:"
      %ul
        - @wpt_test.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :test_id
    = f.text_field :test_id
  .field
    = f.label :xml
    = f.text_area :xml
  .actions
    = f.submit 'Save'
